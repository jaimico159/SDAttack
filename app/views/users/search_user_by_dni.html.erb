<p id="notice"><%= notice %></p>

<%= form_with(url: users_match_path, local: true) do |form| %>

  <div class="field">
    <%= form.label :dni %>
    <%= form.text_field :dni %>
  </div>
  <br>

  <div class="actions">
    <%= form.submit 'Search' %>
  </div>
<% end %>

<% if @user %>
  
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Dni:</strong>
  <%= @user.dni %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>

<%= link_to 'Search User', users_search_path %>

<% end %>
